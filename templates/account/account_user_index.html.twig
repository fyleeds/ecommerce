{% extends 'base.html.twig' %}

{% block title %}Details Compte Utilisateur : {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('account') }}
    {{ encore_entry_link_tags('product') }}
    {{ encore_entry_link_tags('product_edit') }}
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="products-wrapper">

   {% for message in app.flashes('error') %}
    <div>
        {{ message }}
    </div>
    {% endfor %}
    {% for message in app.flashes('success') %}

        {{ message }}

    {% endfor %}
    {# <hr> #}
<div class="detail">
    <div class="detail3">
        <img class="detail4"src="{{ asset('users/' ~ user_found.pfp) }}"
        alt="{{ user_found.username }}" >
    </div>
    <div class="detail2">
        <h2>User Information</h2>
        {% if user_found %}
            <p><strong>Email:</strong> {{ user_found.email }}</p>
            <p><strong>Username:</strong> {{ user_found.username }}</p>
            {# <img src="{{ asset('users/' ~ user_found.pfp) }}"
            alt="{{ user_found.username }}" > #}
            {# <hr> #}
    </div>
</div>
    {% else %}
        <p>User not found.</p>
        <hr>
    {% endif %}

    {% if products|length == 0 %}
    <p>no product found.</p>
    <hr>
    {% elseif products|length == 1 %}
    
        <p>there is a product :</p>
        {% for product in products %}
            {# {{ dump(product) }} #}
            {% include 'product/body.html.twig' with {'product': product, 'user_id': user_id} only %}
            
        {% endfor %}
        <hr>
    {% else %}
    {# {{ dump(products) }} #}
        <h1 class="title_product">there are several products :</h1>
        {% for product in products %}
            {# {{ dump(product) }} #}
            {% include 'product/body.html.twig' with {'product': product, 'user_id': user_id} only %}
        {% endfor %}
    {% endif %}

</div>
{% endblock %}
