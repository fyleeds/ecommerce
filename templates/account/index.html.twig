{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="products-wrapper">

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {# {{ dump(products) }} #}
    {% if products|length == 0 %}
    <p>No products found.</p>
    {% elseif products|length == 1 %}
    
        <p>There is one product:</p>
        {% for product in products %}
            {# {{ dump(product) }} #}
            {% include 'product/index.html.twig' with {'product': product} %}
        {% endfor %}
    {% else %}
    {# {{ dump(products) }} #}
        <p>There are multiple products:</p>
        {% for product in products %}
            {# {{ dump(product) }} #}
            {% include 'product/index.html.twig' with {'product': product} %}
        {% endfor %}
    {% endif %}

    {% if invoices|length == 0 %}
    <p>No invoices found.</p>
    {% elseif invoices|length == 1 %}
        <p>There is one invoice:</p>
        {{ dump(invoices) }}
        {% for invoice in invoices %}
            <p><strong>Date of Transaction:</strong> {{ invoice.dateTransaction|date('d/m/Y H:i') }}</p>
            <p><strong>Total Price:</strong> {{ invoice.totalPrice }} €</p> {# Adjust currency formatting as needed #}
            <p><strong>Address:</strong> {{ invoice.address }}</p>
            <p><strong>Town:</strong> {{ invoice.town }}</p>
            <p><strong>Postal Code:</strong> {{ invoice.postalCode }}</p>
        {% endfor %}
    {% else %}
        <p>There are multiple invoices:</p>
        {% for invoice in invoices %}
            <p><strong>Date of Transaction:</strong> {{ invoice.dateTransaction|date('d/m/Y H:i') }}</p>
            <p><strong>Total Price:</strong> {{ invoice.totalPrice|number_format(2, '.', ',') }} €</p> {# Adjust currency formatting as needed #}
            <p><strong>Address:</strong> {{ invoice.address }}</p>
            <p><strong>Town:</strong> {{ invoice.town }}</p>
            <p><strong>Postal Code:</strong> {{ invoice.postalCode }}</p>
        {% endfor %}
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit">Save changes</button>
    {{ form_end(form) }}

</div>
{% endblock %}
