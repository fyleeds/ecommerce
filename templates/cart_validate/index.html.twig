{# templates/product/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('cartvalidate') }}
{% endblock %}

{% block body %}

{{ form_start(form) }}
<div class="main-content">
    <div class="login-section">
        <div class="form-group">
            {{ form_label(form.address) }}
            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.town) }}
            {{ form_widget(form.town, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.postal_code) }}
            {{ form_widget(form.postal_code, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn">Save changes</button>
    </div>
</div>
{{ form_end(form) }}



{% endblock %}