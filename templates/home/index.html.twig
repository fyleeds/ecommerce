{% extends 'base.html.twig' %}

{% block title %}Amiiboss version zelda!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block body %}

    <div class="baniere">
        <img src="https://img.lemde.fr/2017/03/02/90/0/1920/960/1440/720/60/0/b94faa5_4327-1h5b0kh.88x60nqaor.jpg" alt="baniere">
    </div>
    {% for message in app.flashes('error') %}
    <div>
        {{ message }}
    </div>
    {% endfor %}
    <div class="seachebar">
        <input type="text" placeholder="Rechercher un amiibo" name="search" class="searchbar" id="searchInput">
    </div>
    <div class="cases">
        {% for product in products %}
            <div class="case" data-name="{{ product.title }}">
                <a href="{{ path('product_index',{id:product.id}) }}">
                    <div class="up">
                        <img src="{{ product.attachment }}" alt="{{ product.title }}" title="{{ product.title }}">
                    </div>
                    <div class="down">
                        <p class="nom">{{ product.title }}</p>
                        <p class="theme">{{ product.category.name }}</p>
                        <p class="prix">{{ product.price|number_format(2, ',', ' ') }} €</p>
                    </div>
                </a>
            </div>            
        {% else %}
            <p>Aucun produit trouvé.</p>
        {% endfor %}
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
    $(document).ready(function() {
        $("#searchInput").on("keyup", function() {
        var searchText = $(this).val().toLowerCase();
        $(".case").each(function() {
            var Name = $(this).data("name").toLowerCase();
            if (Name.indexOf(searchText) === -1) {
                $(this).hide();
            } else {
                $(this).show();
            }
        });
        });
    });
    </script>
{% endblock %}

