{% extends 'base.html.twig' %}

{% block title %}Amiiboss version zelda!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block body %}

    <div class="baniere">
        <img src="{{ asset('images/baniere.jpg') }}" alt="baniere">
    </div>
    {% for message in app.flashes('error') %}
    <div>
        {{ message }}
    </div>
    {% endfor %}
    <div class="cases">
        {% for product in products %}
            <div class="case">
                <a href="{{ path('product_index',{id:product.id}) }}">
                    <div class="up">
                        <img src="{{ product.attachment }}" alt="{{ product.title }}" title="{{ product.title }}">
                    </div>
                    <div class="down">
                        <p class="nom">{{ product.title }}</p>
                        <p class="theme">{{ product.category.name }}</p>
                        <p class="prix">{{ product.price|number_format(2, ',', ' ') }} €</p>
                    </div>
                </a>
            </div>            
        {% else %}
            <p>Aucun produit trouvé.</p>
        {% endfor %}
    </div>
{% endblock %}

