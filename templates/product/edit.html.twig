{# templates/product/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('product_edit') }}
{% endblock %}

{% block body %}

{{ form_start(form, {'attr': {'enctype':'multipart/form-data'}}) }}

<div class="main-content">   
    <div class="login-section">
        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.content) }}
            {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.price) }}
            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="date-time-container">
            <div class="date-container">
                {{ form_row(form.releaseDate.date.day, {'attr': {'class': 'form-control date-element'}}) }}
                {{ form_row(form.releaseDate.date.month, {'attr': {'class': 'form-control date-element'}}) }}
                {{ form_row(form.releaseDate.date.year, {'attr': {'class': 'form-control date-element'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_row(form.attachmentFile, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.type) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.game_character) }}
            {{ form_widget(form.game_character, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.category) }}
            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="info">
            <button type="submit" class="btn">Save changes</button>
        </div>
    </div>
</div>

{{ form_end(form) }}

{% endblock %}