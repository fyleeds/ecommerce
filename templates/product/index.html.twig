{% extends 'base.html.twig' %}

{% block body %}
    <h2>Détails du Produit</h2>
    {% for product in products %}
        <div class="product">
            <h3>{{ product.title }}</h3>
            <p><strong>ID :</strong> {{ product.id }}</p>
            <p><strong>Description :</strong> {{ product.content }}</p>
            <p><strong>Prix :</strong> {{ product.price|number_format(2, ',', ' ') }}€</p>
            <p><strong>Date de Création :</strong> {{ product.createdAt|date('d/m/Y H:i:s') }}</p>
            <p><strong>ID de l'Auteur :</strong> {{ product.authorId }}</p>
            <p><strong>Pièce Jointe :</strong> {{ product.attachment }}</p>
            <p><strong>Catégorie :</strong> {{ product.category.name }}</p>
        </div>
    {% else %}
        <p>Aucun produit trouvé.</p>
    {% endfor %}
{% endblock %}
