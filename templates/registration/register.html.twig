{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('register') }}
{% endblock %}

{% block body %}
  <header class="header">
    <div class="logo-section">
      <!-- Remplacez 'logo.png' par le chemin de votre image de logo r√©elle -->
      <a href="{{ path('homepage') }}">
        <img src="{{ asset('img/logo.png') }}" alt="Amiishop Logo">
      </a>
      <span>Amiishop</span>  
    </div>
    <div class="search-section">
      <input type="search" placeholder="Rechercher">
      <button type="submit">üîç</button>
    </div>
    <div class="user-section">
      <!-- Ici, ajoutez vos ic√¥nes utilisateur et panier, vous pouvez utiliser des images ou des ic√¥nes de polices -->
      <a href="{{ path('cart_index') }}">
        <!-- Ins√©rez le chemin de votre image √† la place de "chemin/vers/votre/image.jpg" -->
        <img src="{{ asset('img/sac.png') }}" alt="Votre image" class="utilisateur"/>
      </a>
      <a href="{{ path('my_account_index') }}">
        <!-- Ins√©rez le chemin de votre image √† la place de "chemin/vers/votre/image.jpg" -->
        <img src="{{ asset('img/utilisateur.png') }}" alt="Votre image" class="sac"/>
      </a>
    </div>
  </header>

  <div class="main-content">
    <div class="login-section">
        <img src="{{ asset('img/logo.png') }}" alt="Amiishop Logo" class="login-logo">
        <h2 class="login-title">Amiishop</h2> 
        {{ form_start(registrationForm) }}
          {{ form_errors(registrationForm) }}

          {{ form_row(registrationForm.username, {
              'label': false,
              'attr': {'class': 'form-control', 'placeholder': 'Username'}
          }) }}
          {{ form_row(registrationForm.email, {
              'label': false,
              'attr': {'class': 'form-control', 'placeholder': 'Email'}
          }) }}
          {{ form_row(registrationForm.plainPassword, {
              'label': false,
              'attr': {'class': 'form-control', 'placeholder': 'Password'}
          }) }}
          <div class="form-agree-terms">
              {{ form_row(registrationForm.agreeTerms) }}
          </div>
          <button type="submit" class="but">Register</button>
        {{ form_end(registrationForm) }}
    </div>
      <div class="illustration-section">
        <img src="{{ asset('img/people.png') }}" alt="Illustration" class="logo2">
      </div>
  </div>

  <div class="lastbut">
    <a href="{{ path('app_login') }}">Click here if you have an account</a>
    <a href="{{ path('homepage') }}">Click here to return to the main page</a>
  </div>
{% endblock %}
